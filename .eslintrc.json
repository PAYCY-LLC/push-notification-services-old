{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": ["airbnb-base"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },
    "rules": {
        "semi": "off",
        "max-len": ["error", { "code": 120 }],
        "arrow-parens": ["error", "as-needed"],
        "comma-dangle": ["error", "never"],
        "object-curly-newline": "off",
        "no-trailing-spaces": "warn",
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ]
    }
}
